{
  "name": "radiobud",
  "version": "1.0.0",
  "description": "A minimal radio app for streaming SomaFM",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build:mac": "electron-builder --mac --arm64",
    "build:mac:dmg": "electron-builder --mac dmg --arm64",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build": "electron-builder"
  },
  "keywords": [
    "radio",
    "somafm",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.radiobud.app",
    "productName": "RadioBud",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "splash.html",
      "styles.css",
      "splash.css",
      "package.json"
    ],
    "npmRebuild": false,
    "mac": {
      "category": "public.app-category.music",
      "target": [
        "dir"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Audio"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  }
}
